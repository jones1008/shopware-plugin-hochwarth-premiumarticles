{% block hochwarth_premiumArticles_detail %}
    <sw-page class="hochwarth-premiumArticles-detail">
        <template slot="smart-bar-actions">
            <sw-button :routerLink="{ name: 'hochwarth.premiumArticles.list' }">
                {{ $t('global.default.cancel') }}
            </sw-button>

            <sw-button-process
                    :isLoading="isLoading"
                    :processSuccess="processSuccess"
                    variant="primary"
                    @process-finish="saveFinish"
                    @click="onClickSave"
            >
                {{ $t('global.default.save') }}
            </sw-button-process>
        </template>
        <template slot="content">
            <sw-card-view>
                <sw-card v-if="premiumArticle">
                    <sw-checkbox-field
                            :label="$t('hochwarth-premiumArticles.detail.active')"
                            v-model="premiumArticle.active"
                    ></sw-checkbox-field>
                    <sw-field
                            :label="$t('hochwarth-premiumArticles.detail.minPrice')"
                            v-model="premiumArticle.minPrice"
                            validation="required"
                            type="number"
                            :step="0.1"
                            required
                            :error="premiumArticleMinPriceError"
                            :placeholder="$t('hochwarth-premiumArticles.detail.minPricePlaceholder')"
                    ></sw-field>
                    <sw-entity-single-select
                            :label="$t('hochwarth-premiumArticles.detail.product')"
                            entity="product"
                            v-model="premiumArticle.productId"
                            required
                            :error="premiumArticleProductIdError"
                            :placeholder="$t('hochwarth-premiumArticles.detail.productPlaceholder')"
                    ></sw-entity-single-select>
                    <sw-checkbox-field
                            :label="$t('hochwarth-premiumArticles.detail.automaticAdd')"
                            v-model="premiumArticle.automaticAdd"
                    ></sw-checkbox-field>
                    <sw-entity-many-to-many-select
                            :label="$t('hochwarth-premiumArticles.detail.customerGroups')"
                            :localMode="true"
                            :entityCollection="premiumArticle.customerGroups"
                            v-model="premiumArticle.customerGroups"
                            :placeholder="$t('hochwarth-premiumArticles.detail.customerGroupsPlaceholder')"
                    ></sw-entity-many-to-many-select>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}